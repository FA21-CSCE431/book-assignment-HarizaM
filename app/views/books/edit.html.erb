<h1>Editing Book</h1>

<!--<%= render 'form', book: @book %> having issues with this one-->

<%= form_for(@book, :url => '/books/update', :method => 'post') do |f| %>

<p><label for = "book_title">Title</label>
<%= f.text_field(:title) %></p>

<p><label for = "book_author">Author</label>
<%= f.text_field(:author) %></p>

<p><label for = "book_price">Price</label>
<%= f.number_field(:price, step: 0.01) %></p>

<p><label for = "book_published_date">Published Date</label>
<%= f.date_select(:published_date, :start_year=> 2010, :end_year=> 2021, :use_month_numbers=> true) %></p>

<%= f.submit ("Update Book") %>

<%= link_to 'Show', @book %> |
<%= link_to 'Back', books_path %>

<% end %>
