<div class="books new">
  <h4>Add a New Book</h4>

  <%# <%= form_for(@subject, :url => subjects_path, :method => 'post') do |f| %>
  <%= form_for(@book, :url => '/books/new', :method => 'post') do |f| %>

    <table summary="Books form fields">
      <tr>
        <th>Title</th>
        <td><%= f.text_field(:title) %></td>
      </tr>
      <tr>
        <th>Author</th>
        <td><%= f.text_field(:author) %></td>
      </tr>
      <tr>
        <th>Price</th>
        <td><%= f.number_field(:price, step: 0.01) %></td>
      </tr>
      <tr>
        <th>Published Date</th>
        <td><%= f.text_field(:published_date) %></td>
      </tr>
    </table>

    <div class="form-buttons">
      <%= f.submit("Add Book") %>
    </div>

  <%= link_to 'Back', books_path %>
  <% end %>
</div>
